{
  "name": "yugioh-guessing-game",
  "version": "1.0.0",
  "main": "hub.js",
  "description": "CAPS - The Code Academy Parcel Service",
  "license": "MIT",
  "keywords": [],
  "author": "Reed",
  "scripts": {
    "test": "jest --verbose --coverage --detectOpenHandles --collectCoverageFrom='**/*.js' --coverageReporters='json' --coverageReporters='text' --coverageReporters='lcov' --coverageReporters='clover' --coverageReporters='html'",
    "start": "node hub.js"
  },
  "dependencies": {
    "chance": "^1.1.11",
    "dotenv": "^16.1.0",
    "socket.io-client": "^4.6.1"
  },
  "devDependencies": {
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "socket.io": "^4.6.1",
    "socket.io-mock": "^1.3.2"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "react"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error",
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error",
      "no-console": "off"
    }
  }
}
